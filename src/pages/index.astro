---
import "@/styles/globals.css";
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/Link.astro";
// import Messages from "@/components/Messages";
import Footer from "@/components/Footer";
import { PROJECTS, GITHUB } from "@/utils/info";
import { ACHIEVEMENTS } from "@/utils/info";
import { EXPERIENCES } from "@/utils/info";
import { EMAIL_ADDRESS } from "@/utils/info";
---

<Layout title="Aman Chand">
  <main class="max-w-[500px] lg:max-w-[750px] flex flex-col gap-6 lg:gap-8">
    <img
      src="/gengar.png"
      alt="Scary Gengar"
      class="size-20 lg:size-40 absolute top-4 right-4 opacity-0 hover:opacity-100 duration-[3s]"
    />

    <a href="/">
      <h1
        class="text-neutral-400 hover:text-special duration-500 text-4xl font-special"
      >
        Aman Chand
      </h1>
    </a>

    <section class="flex flex-col gap-4 lg:gap-6">
      <p>
        <a
          class="underline duration-500 text-body decoration-neutral-500 hover:text-special hover:decoration-neutral-300 underline-offset-4"
          href={GITHUB}
          target="_blank"
          rel="noopener noreferrer"
        >
          Full stack software developer</a
        > | Currently working on <span
          class="bg-gradient-to-r from-blue via-orange to-purple bg-clip-text text-transparent selection:text-purple selection:bg-neutral-800 whitespace-nowrap"
        >
          <a
            href="https://bitly.com/98K8eH"
            class="underline duration-500 hover:text-orange hover:decoration-white decoration-purple underline-offset-4"
            target="_blank"
            rel="noopener noreferrer"
          >
            something special
          </a>
        </span>
      </p>
      <p class="group">
        This website is heavily
        <span class="relative">
          <span class="lg:group-hover:invisible">inspired by</span>
          <span
            class="hidden lg:block lg:absolute left-0 top-0 invisible group-hover:visible text-sm mt-0.5"
            >copied from</span
          >
        </span>
        <Link title="Paco.me" href="https://paco.me" />
      </p>
    </section>

    <section
      class="flex flex-col lg:flex-row justify-between text-neutral-400 gap-6 lg:gap-8"
    >
      <div class="lg:w-52">
        <p class="mb-6 lg:mb-8">Projects</p>

        <div class="flex flex-col gap-4 lg:gap-6">
          {
            PROJECTS.map(({ title, description, link }) => (
              <div class="flex flex-col gap-2">
                <Link title={title} href={link} />
                <p>{description}</p>
              </div>
            ))
          }
        </div>
      </div>
      <div class="lg:w-52">
        <p class="mb-6 lg:mb-8">Achievements</p>

        <div class="flex flex-col gap-4 lg:gap-6">
          {
            ACHIEVEMENTS.map(({ title, description, link }) => (
              <div class="flex flex-col gap-2">
                <Link title={title} href={link} />
                <p>{description}</p>
              </div>
            ))
          }
        </div>
      </div>
      <div class="lg:w-52">
        <p class="mb-6 lg:mb-8">Experience</p>

        <div class="flex flex-col gap-4 lg:gap-6">
          {
            EXPERIENCES.map(({ title, description, link }) => (
              <div class="flex flex-col gap-2">
                <Link title={title} href={link} />
                <p>{description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="flex flex-col gap-4 lg:gap-6">
      <h2 class="font-special text-3xl mb-2 text-neutral-400">More about me</h2>
      <p>
        Lorem ipsum dolor sit, amet consectetur adipisicing elit. Expedita eaque
        tenetur dignissimos quasi magni optio quam doloribus nesciunt
        exercitationem consectetur reprehenderit repellat alias, ab itaque
        dolores atque. Id, quisquam autem.
      </p>

      <p>
        Lorem ipsum dolor sit, amet consectetur adipisicing elit. Expedita eaque
        tenetur dignissimos quasi magni optio quam doloribus nesciunt
        exercitationem consectetur reprehenderit repellat alias, ab itaque
        dolores atque. Id, quisquam autem.
      </p>
    </section>

    <!-- <section class="flex flex-col gap-4 lg:gap-6">
      <h2 class="font-special text-3xl mb-2 text-neutral-400">
        Leave a message
      </h2>
      <Messages client:only="react" />
    </section> -->

    <section class="flex flex-col gap-4 lg:gap-6">
      <h2 class="font-special text-3xl text-neutral-400 mb-2">
        Previous portfolios
      </h2>
      <div class="flex flex-col md:flex-row gap-4 lg:gap-6">
        <div class="flex gap-4 lg:gap-6">
          <Link title="First Portfolio" href="https://v-1.amanchand.com.np" />
          <Link title="Second Portfolio" href="https://v0.amanchand.com.np" />
        </div>

        <div class="flex gap-4 lg:gap-6">
          <Link title="Third Portfolio" href="https://v1.amanchand.com.np" />
          <Link title="Fourth Portfolio" href="https://v2.amanchand.com.np" />
        </div>
      </div>
    </section>

    <section class="flex flex-col gap-4 lg:gap-6">
      <h2 class="font-special text-3xl text-neutral-400 mb-2">Contact</h2>
      <p>
        Send a message at <Link
          title={EMAIL_ADDRESS}
          href=`mailto:${EMAIL_ADDRESS}`
        />
      </p>
    </section>

    <section class="relative mt-20 lg:mt-40">
      <Footer client:only="react" />
    </section>
  </main>
</Layout>
